<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjouterFragment"
    android:forceDarkAllowed="false"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:src="@drawable/logo_restoscope"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logoImage"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:text="Accessibilité de votre établissement"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dans cette section, vous allez renseigner les informations d'accessibilité de votre restaurant en répondant à un questionnaire. Ces informations permettront d'évaluer l'accessibilité de votre établissement. \n\nVous pouvez soit ajouter un nouveau restaurant, soit mettre à jour les informations existantes."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="80dp"
                    android:lineSpacingMultiplier="1.3"
                    android:gravity="center"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAjouter"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/purple_500"
                    app:rippleColor="@color/vert"
                    android:stateListAnimator="@null"
                    android:text="Ajouter" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMettreAJour"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_500"
                    app:rippleColor="@color/vert"
                    android:stateListAnimator="@null"
                    android:text="Mettre à jour les informations" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>